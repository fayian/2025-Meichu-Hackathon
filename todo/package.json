{
  "name": "mx-console-creative-assistant",
  "version": "1.0.0",
  "description": "MX Creative Console 智能創作助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "logitech",
    "mx-console",
    "productivity",
    "ai-assistant",
    "focus-timer"
  ],
  "author": "Your Team Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "openai": "^4.10.0",
    "node-cron": "^3.0.2",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.yourteam.mx-console-app",
    "productName": "MX Creative Console Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}